{% extends "layout.jinja" %}

{% block headers %}
    <link rel="stylesheet" href="{{url_for('static', filename='styles/search-team.css')}}">
    <link rel="stylesheet" href="{{url_for('static', filename='styles/tag.css')}}">
    <link rel="stylesheet" href="{{url_for('static', filename='styles/team-items.css')}}">
{% endblock headers %}

{% block content %}
    <div class="container">
        <div class="form-group row input d-flex align-items-center">
            <span class="form-label col-lg-2">Search Term:</span>
                <div class="col-lg-8 remove-padding">
            <input class="form-control form-control-lg" id="input" type="text">
            </div>
        </div>
        <div class="form-group row tags-div d-flex align-items-center">
            <span class="form-label col-lg-2">Search Tags:</span>
            <div class='tag-container col-lg-8'>
                <input class="form-control form-control-lg" id=tags type="text">
            </div>
        </div>
    <div id="results"></div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="{{url_for('static', filename='js/search.js')}}"></script>
{% endblock content %}
